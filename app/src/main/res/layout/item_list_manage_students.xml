<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="6dip"
    android:background="@color/dark_Blue">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/orange"
        android:layout_marginRight="-51dp"
        android:layout_marginLeft="-51dp"/>
    <TextView
        android:id="@+id/fname"
        android:layout_width="200dp"
        android:layout_height="26dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:text="Fname "
        android:textColor="@color/white"
        android:textAlignment="textStart"
        android:paddingTop="3dp"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/lname"
        android:layout_width="200dp"
        android:layout_height="26dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:maxLines="1"
        android:text="Lname "
        android:textColor="@color/white"
        android:textAlignment="textEnd"
        android:paddingTop="3dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="200dp"
        android:layout_height="26dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/fname"
        android:maxLines="1"
        android:text="Gender"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textAlignment="textStart"
        android:layout_marginLeft="10dp"
        android:paddingTop="3dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/isGoing"
        android:layout_width="200dp"
        android:layout_height="26dip"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/lname"
        android:maxLines="1"
        android:text="isGoing"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textAlignment="textEnd"
        android:layout_marginRight="10dp"
        android:paddingTop="3dp"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/bday"
        android:layout_width="230dp"
        android:layout_height="26dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/gender"
        android:maxLines="1"
        android:text="bday"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textAlignment="textStart"
        android:layout_marginLeft="10dp"
        android:paddingTop="3dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/orphan"
        android:layout_width="100dp"
        android:layout_height="26dip"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/isGoing"
        android:maxLines="1"
        android:text="isGoing"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textAlignment="textEnd"
        android:layout_marginRight="10dp"
        android:paddingTop="3dp"
        android:textSize="16sp" />


    <Button
        android:id="@+id/takeQuiz"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:background="@color/orange"
        android:text="ASSESs"
        android:layout_below="@id/bday"
        android:textColor="@color/dark_Blue"
        android:layout_marginTop="6dp" />


    <Button
        android:id="@+id/setGoing"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:background="@color/orange"
        android:text="Set Going "
        android:layout_below="@id/orphan"
        android:textColor="@color/dark_Blue"
        android:layout_marginTop="6dp" />

</RelativeLayout>